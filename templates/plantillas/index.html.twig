{% extends 'base.html.twig' %}

{% block title %}Plantillas index{% endblock %}

{% block body %}
    <h1>Plantillas index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Subject</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for plantilla in plantillas %}
            <tr>
                <td>{{ plantilla.id }}</td>
                <td>{{ plantilla.code }}</td>
                <td>{{ plantilla.subject }}</td>
                <td>{{ plantilla.content }}</td>
                <td>
                    <a href="{{ path('app_plantillas_show', {'id': plantilla.id}) }}">show</a>
                    <a href="{{ path('app_plantillas_edit', {'id': plantilla.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_plantillas_new') }}">Create new</a>
{% endblock %}
